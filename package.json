{
  "name": "zswjs-ledger-signature-provider",
  "version": "0.1.0",
  "description": "A Signature provider for communicating with zswjs from a Ledger device.",
  "author": {
    "name": "zhongshuwen",
    "url": "https://www.zhongshuwen.com"
  },
  "contributors": [
    "CF"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "lint": "tslint -c tslint.json src/*.ts",
    "build": "npm run clean & tsc -p ./tsconfig.json",
    "clean": "rm -rf dist",
    "coverage": "jest --coverage",
    "test": "jest",
    "prepublish": "npm run build",
    "docs": "typedoc --excludePrivate --excludeProtected --out ./docs --theme markdown"
  },
  "dependencies": {
    "@babel/core": "7.6.0",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-react": "7.0.0",
    "@ledgerhq/hw-transport": "^6.27.1",
    "@ledgerhq/hw-transport-web-ble": "^6.27.1",
    "@ledgerhq/hw-transport-webusb": "^6.27.1",
    "asn1-ber": "1.0.9",
    "bip32-path": "0.4.2",
    "buffer": "5.2.1",
    "zsw-crypto": "1.1.0",
    "zswjs": "1.3.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@blockone/tslint-config-blockone": "^4.0.0",
    "@types/node": "^11.9.4",
    "babel-polyfill": "^6.26.0",
    "jest": "^24.1.0",
    "ts-jest": "^24.1.0",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.23.2",
    "typedoc-plugin-markdown": "^1.1.19",
    "typescript": "^3.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(tsx?)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testRegex": "(/src/.*(\\.|/)(test|spec))\\.(ts?|tsx?)$"
  }
}
